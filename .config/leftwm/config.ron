    keybind: [
        (command: ToggleScratchPad, value: "Alacritty", modifier: ["modkey", "Shift"], key: "Return"),
        (command: ToggleScratchPad, value: "Peek", modifier: ["Alt", "Shift"], key: "p"),
        (command: ToggleScratchPad, value: "Pavucontrol", modifier: ["modkey", "Shift"], key: "v"),
        (command: ToggleSticky, modifier: ["modkey"], key: "s"),
