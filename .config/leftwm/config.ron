// File Header 
#![enable(implicit_some)]
(
    modkey: "Mod4",
    // mousekey: "Mod4",
    // worksp1aces: [],
    workspaces: [
        ( y: 0, x: 0, height: 1080, width: 1920 ,output: "HDMI1" ),
        ( y: 0, x: 1920, height: 1080, width: 1920, output: "eDP1"),
